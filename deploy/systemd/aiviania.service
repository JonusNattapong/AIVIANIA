[Unit]
Description=AIVIANIA Rust web framework service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
EnvironmentFile=/etc/default/aiviania.env
WorkingDirectory=/opt/aiviania
ExecStart=/opt/aiviania/aiviania --config /etc/aiviania/config.yml
Restart=on-failure
RestartSec=5s
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
